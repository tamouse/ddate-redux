#!/usr/bin/env ruby
$:.unshift(File.expand_path('../lib', __FILE__))
require 'rubygems'
require 'ddate'
runner = Ddate::CLI.new
begin
  puts runner.run(ARGV)
rescue Exception => e
  case e
  when DdateException, ArgumentError
    STDERR.puts "#{e.class}: #{e}"
    STDERR.puts Ddate::USAGE
  else
    raise e
  end
end
